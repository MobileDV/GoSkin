<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imgvLogo"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:id="@+id/imgvDividor"
        android:layout_alignLeft="@+id/imgvLogo"
        android:layout_below="@+id/imgvLogo"
        android:layout_marginTop="-10dp"
        android:background="@color/gray_lt" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/imgvLogo"
        android:layout_toEndOf="@+id/imgvLogo"
        android:layout_marginLeft="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/tvTitle"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/imgvLogo"
            android:layout_toEndOf="@+id/imgvLogo"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="New Text"
            android:id="@+id/tvInfo"
            android:textSize="12dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/gray_lt" />
    </LinearLayout>
</RelativeLayout>
